{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}

{% if value %}
    <img 
        src="{{ value | apply_filter('small_thumb') }}" 
        border="0" 
        alt="{% if object.alt is defined %}{{object.alt}}{% endif %}" 
        title="{% if object.title is defined %}{{object.title}}{% endif %}" 
    />
{% endif %}

{% endblock %}